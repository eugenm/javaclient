<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="rootPane" styleClass="main-panel" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aeb.elan9.gui.javaclient.HelloController">
   <children>
   
   	<Label text="First Name:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0" />
   	<TextField fx:id="firstNameField" prefColumnCount="30" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0" />
   	<Label text="Last Name:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="60.0" />
   	<TextField fx:id="lastNameField" prefColumnCount="30" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0" />
   
   	<Button onAction="#sayHello" text="Say Hello" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
   
   	<Label fx:id="messageLabel" styleClass="hello-message" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="100.0" />
      <Button onAction="#openDialog" text="Open MessageDialog" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="90.0" />
   </children>

</AnchorPane>
